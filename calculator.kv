<NumberBtn@Button>
    # background_normal: ''
    background_color: (0.3, 0.3, 0.3, 1)

<CalculatorLayout>

    BoxLayout:

        orientation: 'vertical'
        size: root.width, root.height

        TextInput:
            id: calc_window
            text: '0'
            halign: 'right'
            font_size: 65
            size_hint: (1, 0.15)

        GridLayout:
            cols: 4
            rows: 5

            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: '%'
                on_press: root.percent()

            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: 'C'
                on_press: app.clear()

            Button:
                id: clear_btn
                size_hint: (0.2, 0.2)
                font_size: 32
                text: u'\u00AB'
                on_press: app.clear_last()

            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: '/'
                on_press: root.math_sign('/')

            NumberBtn:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: '7'
                on_press: root.btn_press(7)

            NumberBtn:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: '8'
                on_press: root.btn_press(8)

            NumberBtn:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: '9'
                on_press: root.btn_press(9)

            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: 'x'
                on_press: root.math_sign('x')

            NumberBtn:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: '4'
                on_press: root.btn_press(4)

            NumberBtn:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: '5'
                on_press: root.btn_press(5)

            NumberBtn:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: '6'
                on_press: root.btn_press(6)

            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: '-'
                on_press: root.math_sign('-')

            NumberBtn:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: '1'
                on_press: root.btn_press(1)

            NumberBtn:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: '2'
                on_press: root.btn_press(2)

            NumberBtn:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: '3'
                on_press: root.btn_press(3)

            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: '+'
                on_press: root.math_sign('+')

            NumberBtn:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: '+/-'
                on_press: root.sign_chang()

            NumberBtn:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: '0'
                on_press: root.btn_press(0)

            NumberBtn:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: '.'
                on_press: root.dot()

            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: '='
                on_press: root.equals()
